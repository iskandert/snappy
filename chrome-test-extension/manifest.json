{
  "manifest_version": 3,
  "name": "Test Extension",
  "version": "0.0.1",
  "description": "Minimal MV3 test extension",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Run main"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["constants.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
